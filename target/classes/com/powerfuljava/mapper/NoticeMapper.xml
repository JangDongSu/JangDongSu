<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.powerfuljava.mapper.NoticeMapper">
	<select id="getList" resultType="com.powerfuljava.domain.NoticeVO">
		<![CDATA[select * from notice_board where n_bno >0]]>
	</select>
	<!-- criteria -->
	<sql id="criteria">
		<where>
		 	<trim prefix="(" suffix=")" prefixOverrides="OR">
			<!-- <trim prefix="(" suffix=")" prefixOverrides="AND | OR">-->
				<foreach item="type" collection="typeArr">
					<trim prefix="OR">
					<!-- <trim prefix="AND">-->
						<choose>
							<when test="type == 'T'.toString()">
								title like CONCAT('%', #{keyword}, '%')
							</when>
							<when test="type == 'C'.toString()">
								content like CONCAT('%', #{keyword}, '%')
							</when>
							<when test="type == 'W'.toString()">
								writer like CONCAT('%', #{keyword}, '%')
							</when>
						</choose>
					</trim>
				</foreach>
			</trim>
		</where>
	</sql>
	
	<!-- criteria -->
	<select id="getListWithPaging" resultType="com.powerfuljava.domain.NoticeVO">
		select @rownum := @rownum+1 as rn, n_bno, n_title, n_content, n_writer, regdate, updatedate, viewcount
		from jdongsu_db.notice_board, (select @rownum:=0) A
		<include refid="criteria"></include>
		 order by rn desc limit #{offset}, #{amount}
	</select>
	
	<!-- criteria -->
	<update id="update">
		update notice_board
		set 
		n_title = #{n_title}, 
		n_content = #{n_content}, 
		n_writer = #{n_writer}
		where n_bno = #{n_bno}
	</update>
	
	<!-- 조회수 -->
	<update id="getViewCount">
		update notice_board
		set
		viewcount = viewcount+1
		where n_bno = #{n_bno}
	</update>
	
	
	<delete id="delete">
		delete from notice_board where n_bno = #{n_bno} 
	</delete>
	<select id="read" resultType="com.powerfuljava.domain.NoticeVO">
		select * from notice_board where n_bno = #{n_bno}
	</select>
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="n_bno">
	insert into notice_board (n_title, n_content, n_writer)
		values(#{n_title}, #{n_content}, #{n_writer})
	</insert>
	
	<select id="getTotalCount" resultType="int">
		select count(*) from notice_board where
		<trim suffix="and" prefixOverrides="WHERE">
			<include refid="criteria"></include>
		</trim> 
		n_bno > 0
	</select>
	<select id="getLatestList" resultType="com.powerfuljava.domain.NoticeVO">
		 select @rownum := @rownum+1 as rn, n_bno, n_title, regdate 
		from jdongsu_db.notice_board, (select @rownum:=0) A
		<include refid="criteria"></include>
		 order by regdate desc limit 4 
	</select>
	
	<!-- <select id="getLatestListWithPaging" resultType="com.powerfuljava.domain.NoticeVO">
		select @rownum := @rownum+1 as rn, n_bno, n_title, n_content, n_writer, regdate, updatedate
		from jdongsu_db.notice_board, (select @rownum:=0) A
		 order by rn desc limit #{offset}, #{amount}
	</select>-->
</mapper>