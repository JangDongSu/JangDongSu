<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.powerfuljava.mapper.TravellReplyMapper">
	
	<!-- 댓글 삽입 / 시작 / -->
	<insert id="insert">
		insert into travell_reply (t_bno, reply, replyer)
			values(#{t_bno}, #{reply}, #{replyer})
	</insert>
	<!-- 댓글 삽입 / 끝 / -->
	
	<!-- 댓글 읽기 / 시작 / -->
	<select id="read" resultType="com.powerfuljava.domain.TravellReplyVO">
		select * from travell_reply where t_rno = #{t_rno}
	</select>
	<!-- 댓글 읽기/ 끝/ -->
	
	<!-- 댓글 수정 / 시작 / -->
	<update id="update">
		update travell_reply
		set 
		reply = #{reply},
		updatedate = now()
		where 
		t_rno = #{t_rno}
	</update>
	<!-- replyer= #{replyer}, -->
	<!-- 댓글 수정 / 끝 / -->
	
	<!-- 댓글 삭제 / 시작 / -->
	<delete id="delete">
		delete from travell_reply where t_rno = #{t_rno}
	</delete>
	<!-- 댓글 삭제 / 끝 / -->
	
	<!-- 게시물 읽기 페이지 댓글 목록 / 시작 / -->
	<select id="getListWithPaging" resultType="com.powerfuljava.domain.TravellReplyVO">
		select t_rno, t_bno, reply, replyer, replyDate, updateDate 
		from travell_reply
		where t_bno = #{t_bno}
		order by t_rno asc LIMIT #{galleryPaging.offset}, #{galleryPaging.amount}
	</select>
	<!-- 게시물 읽기 페이지 댓글 목록 / 끝 / -->
	
	<!-- 게시물 읽기 페이지 댓글 목록 페이지/ 시작 / -->
	<select id="getCountByT_bno" resultType="int">
		select count(t_rno) from travell_reply
		where t_bno = #{t_bno} 
	</select>
	<!-- 게시물 읽기 페이지 댓글 목록 페이지/ 끝 / -->
	
